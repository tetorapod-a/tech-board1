#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Create Account
      %h5 新規アカウントの作成
      .btn-back
        = render "devise/shared/links"
        %p 登録済みの方はこちらから
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          
          .field-input
            = f.text_field :name, autofocus: true, placeholder: 'Name'
        .field
          .field-input
            = f.email_field :email, placeholder: 'E-mail'
        .field
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: 'Password(6字以上)'
        .field
          .field-input 
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password(確認用)'
        .actions
          = f.submit "Create Account", class: 'btn'
