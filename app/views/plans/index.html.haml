%p#notice= notice
%h1 施工依頼一覧
%table
  %thead
    %tr
      %th 現場名
      %th 作成日時
      %th 施工場所
      %th 客先担当者
      %th 工事内容
      %th 備考
      %th 希望完了日時
      %th{:colspan => "3"}
  %tbody
    - @plans.each do |plan|
      %tr
        %td= plan.name
        %td= plan.created_at.strftime('%Y/%m/%d')
        %td= plan.place
        %td= plan.client
        %td= plan.body
        %td= plan.detail
        %td= plan.limit.strftime('%m/%d')
        %td= link_to 'Show', plan
        %td= link_to 'Edit', edit_plan_path(plan)
        %td= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Plan', new_plan_path

.user-statuses
  .user-statuses__btn
    - if user_signed_in?
      = "こんにちは#{current_user.name}さん"
      %br
      = link_to "ログアウト", destroy_user_session_path, method: :delete
      %br
      = link_to "編集", edit_user_path(current_user)
    - else
      = link_to "ログイン", new_user_session_path
      %br
      = link_to "新規ユーザー登録", new_user_registration_path
  
  